{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "12.1.0",

  "compilerOptions": {
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "module": "CommonJS",
    "target": "es2019",
    "outDir": "./build",
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "express"]
  }
}
